EXCHANGE_SANDBOX=false

# ============================================================================
# ü§ñ TELEGRAM BOT CONFIGURATION  
# ============================================================================
# 1. Crie um bot via @BotFather no Telegram
# 2. Obtenha o token do bot
# 3. Obtenha seu chat ID enviando /start para @userinfobot

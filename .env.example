DASHBOARD_PASSWORD=admin123

# ============================================================================
# üîí SECURITY SETTINGS
# ============================================================================
# Configura√ß√µes de seguran√ßa adicionais
SECURITY_LEVEL=high
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# ============================================================================
# üìä REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# üö® TRADING SAFETY SETTINGS
# ============================================================================
# Configura√ß√µes de seguran√ßa para trading
